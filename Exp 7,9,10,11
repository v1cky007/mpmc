7. Traffic Light Controller

void setup() {
  // Junction 1
  pinMode(A0, OUTPUT); // Red light
  pinMode(A1, OUTPUT); // Yellow light
  pinMode(A2, OUTPUT); // Green light
  
  // Junction 2
  pinMode(A3, OUTPUT); // Red light
  pinMode(A4, OUTPUT); // Yellow light
  pinMode(A5, OUTPUT); // Green light

  // Junction 3
  pinMode(2, OUTPUT); // Red light
  pinMode(3, OUTPUT); // Yellow light
  pinMode(4, OUTPUT); // Green light

  Serial.begin(9600);
}

void loop() {
  // Junction 1: Stop (Red), Junction 2: Ready (Yellow), Junction 3: Go (Green)
  digitalWrite(A0, HIGH); // Junction 1 Red
  digitalWrite(A1, LOW);  // Junction 1 Yellow
  digitalWrite(A2, LOW);  // Junction 1 Green

  digitalWrite(A3, LOW);  // Junction 2 Red
  digitalWrite(A4, HIGH); // Junction 2 Yellow
  digitalWrite(A5, LOW);  // Junction 2 Green

  digitalWrite(2, LOW);   // Junction 3 Red
  digitalWrite(3, LOW);   // Junction 3 Yellow
  digitalWrite(4, HIGH);  // Junction 3 Green
  
  Serial.println("Junction 1: STOP, Junction 2: READY, Junction 3: GO");
  delay(5000);

  // Junction 1: Ready (Yellow), Junction 2: Go (Green), Junction 3: Stop (Red)
  digitalWrite(A0, LOW);
  digitalWrite(A1, HIGH);
  digitalWrite(A2, LOW);

  digitalWrite(A3, LOW);
  digitalWrite(A4, LOW);
  digitalWrite(A5, HIGH);

  digitalWrite(2, HIGH);
  digitalWrite(3, LOW);
  digitalWrite(4, LOW);

  Serial.println("Junction 1: READY, Junction 2: GO, Junction 3: STOP");
  delay(5000);

  // Junction 1: Go (Green), Junction 2: Stop (Red), Junction 3: Ready (Yellow)
  digitalWrite(A0, LOW);
  digitalWrite(A1, LOW);
  digitalWrite(A2, HIGH);

  digitalWrite(A3, HIGH);
  digitalWrite(A4, LOW);
  digitalWrite(A5, LOW);

  digitalWrite(2, LOW);
  digitalWrite(3, HIGH);
  digitalWrite(4, LOW);

  Serial.println("Junction 1: GO, Junction 2: STOP, Junction 3: READY");
  delay(5000);
}

9a.LED Blink

#include<LPC214X.H>
unsigned int d;
int main(void){
	IO0DIR = (1<<16);
	while(1){
		IO0SET = (1<<16);
		for(d=0;d<500000;d++);
		IO0CLR = (1<<16);
		for(d=0;d<500000;d++);
	}
}

9b.LED Switch

#include<LPC214X.H>
unsigned int d;
int main(void){
	IO0DIR |=(1<<16);
	IO0DIR |=(1<<17);
	IO0DIR |=(1<<18);
	IO0DIR |=(1<<19);
	IO0DIR |=(1<<20);

	while(1){
		IO0SET = (1<<16);
		for(d=0;d<700000;d++);
		IO0CLR = (1<<16);
		
		IO0SET = (1<<17);
		for(d=0;d<700000;d++);
		IO0CLR = (1<<17);

		IO0SET = (1<<18);
		for(d=0;d<700000;d++);
		IO0CLR = (1<<18);

		IO0SET = (1<<19);
		for(d=0;d<700000;d++);
		IO0CLR = (1<<19);

		IO0SET = (1<<20);
		for(d=0;d<700000;d++);
		IO0CLR = (1<<20);
	}
}

10. LCD Display

#include <LPC214X.H>
#define RS (1<<16) 
#define EN (1<<17) 
void delay(int count) {
    unsigned int i;
    for (i = 0; i < count * 1000; i++);  
}
void lcdcmd(char cmd) {
    IO0PIN = cmd;      
    IO0CLR = RS;     
    IO0SET = EN;        
    delay(1);          
    IO0CLR = EN;     
}
void lcddata(char data) {
    IO0PIN = data;      
    IO0SET = RS;        
    IO0SET = EN;        
    delay(35);           
    IO0CLR = EN;        
}
int main() {
	char s[] = "Hello World !";  
    unsigned int i;
    PINSEL0 = 0x00000000;  
    IO0DIR = 0xFFFFFFFF;   
    lcdcmd(0x38);  
    lcdcmd(0x0C);  
    lcdcmd(0x06);  
    for (i = 0; s[i] != '\0'; i++) {  
        lcddata(s[i]);  
    }

	while(1);
	return 0;
}

11. Home Automation
int an = A3;
int di = 3;

void setup(){
  pinMode(di,OUTPUT);
  pinMode(an,INPUT);
}
void loop(){
  if(analogRead(an)>170){
  	digitalWrite(di,HIGH);
  }
  else{
  	digitalWrite(di,LOW);
  }
}
